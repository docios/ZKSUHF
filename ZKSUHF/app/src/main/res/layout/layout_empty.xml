<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loading_emptyimg"
        android:layout_width="@dimen/controlSetting_80dp"
        android:layout_height="@dimen/controlSetting_80dp"
        android:background="@mipmap/load_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/controlSetting_12dp"
        android:layout_marginBottom="@dimen/controlSetting_12dp"
        android:text="暂时没有数据"
        android:textColor="@color/color_3"
        android:textSize="@dimen/fontSetting_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="点击我重试"
        android:textColor="@color/grey61"
        android:textSize="@dimen/fontSetting_14sp" />
</LinearLayout>
