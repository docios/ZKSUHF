<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loading_errorimg"
        android:layout_width="@dimen/controlSetting_80dp"
        android:layout_height="@dimen/controlSetting_80dp"
        android:src="@mipmap/load_error" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据获取失败"
        android:layout_marginTop="@dimen/controlSetting_12dp"
        android:layout_marginBottom="@dimen/controlSetting_12dp"
        android:textColor="@color/color_3"
        android:textSize="@dimen/fontSetting_14sp" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/controlSetting_12dp"
        android:textSize="@dimen/controlSetting_12dp"
        android:text="请检查网络后点击重新加载" />
</LinearLayout>
